<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editDistance"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/distancia"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Total de Quilômetros"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/editPrice"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/preco" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Preço por litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"/>

    <EditText
        android:id="@+id/editAutonomy"
        style="@style/customEditText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="@string/autonomia" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="2dp"
        android:text="Kms por litro"
        android:textAllCaps="true"
        android:textColor="@color/colorDarkGray"
        android:textSize="10sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="35dp"
        android:text="Seu gasto total será de:"
        android:textAllCaps="true"
        android:textSize="10sp"/>

    <TextView
        android:id="@+id/textResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:textAllCaps="true"
        android:textColor="#FD6A6A"
        android:textSize="35sp"
        android:text="R$ 0,00" />

    <Button
        android:id="@+id/buttonCalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular" />

</LinearLayout>